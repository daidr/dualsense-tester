{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "./**/vite.config.*",
    "./**/vitest.config.*",
    "./**/cypress.config.*",
    "./**/nightwatch.conf.*",
    "./**/playwright.config.*",
    "./config/**/*"
  ]
}
