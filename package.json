    "@unocss/eslint-config": "^66.1.2",
    "@vercel/functions": "^2.1.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.27.0",
    "npm-run-all2": "^8.0.4",
    "rollup-plugin-webbundle": "^0.2.0",
    "sass-embedded": "^1.89.0",
    "simple-git": "^3.27.0",
    "typescript": "5.8.3",
