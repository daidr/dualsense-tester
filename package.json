    "lodash-es": "^4.17.21",
    "motion-v": "^1.1.1",
    "pinia": "^3.0.2",
    "pixi.js": "^8.9.2",
    "reka-ui": "^2.3.0",
    "ufo": "^1.6.1",
    "vue": "^3.5.15",
    "vue-i18n": "^11.1.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@eslint/eslintrc": "^3.3.1",
